<Page x:Class="CourseSystemLMS.Views.Students"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Students">

    <Grid Background="#F5F5F5" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search & Actions -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="Students"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0 0 0 20"/>

        <!-- SEARCH + ADD BUTTON -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 20">
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Height="30"
                     Margin="0 0 10 0"
                     ToolTip="Search students..."/>

            <Button Content="Search"
                    Width="80"
                    Height="30"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Margin="0 0 10 0"
                    Click="Search_Click"/>

            <Button Content="New Student"
                    Width="120"
                    Height="30"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="NewStudent_Click"/>
        </StackPanel>

        <!-- DATA GRID -->
        <DataGrid x:Name="StudentsDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  AlternatingRowBackground="#F0F0F0"
                  Background="White"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  RowHeight="35"
                  Margin="0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding StudentId}" Width="50"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="DOB" Binding="{Binding DOB}" Width="120"/>
                <DataGridTextColumn Header="Parent Contact" Binding="{Binding ParentContact}" Width="150"/>
                <DataGridTextColumn Header="Subscription" Binding="{Binding SubscriptionStatus}" Width="120"/>
                <DataGridTextColumn Header="Grade" Binding="{Binding CurrentGrade}" Width="100"/>
                <DataGridTextColumn Header="Group" Binding="{Binding CurrentGroup}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
