<Page x:Class="CourseSystemLMS.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CourseSystemLMS.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Page.Resources>
        <!-- Easing Function for Smooth Animation -->
        <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>

        <!-- Fade-in Animation for Cards -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5" />
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                             From="0.8" To="1" Duration="0:0:0.5" 
                             EasingFunction="{StaticResource EaseOut}" />
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                             From="0.8" To="1" Duration="0:0:0.5" 
                             EasingFunction="{StaticResource EaseOut}" />
        </Storyboard>

        <!-- Hover Effect for Cards -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#444" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- Hover Animation -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1.05" Duration="0:0:0.5"
                                                 EasingFunction="{StaticResource EaseOut}"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1.05" Duration="0:0:0.5"
                                                 EasingFunction="{StaticResource EaseOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>

                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#0078D7" Opacity="0.5" BlurRadius="15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#F5F7FA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title with Gradient -->
        <TextBlock Text="Dashboard" 
                   FontSize="32" 
                   FontWeight="Bold"
                   Margin="0,0,0,30"
                   VerticalAlignment="Top">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0078D7" Offset="0"/>
                    <GradientStop Color="#28A745" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <!-- Stats Area -->
        <!-- WrapPanel for responsiveness -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" ItemWidth="220" ItemHeight="140">

                <!-- Card 1 -->
                <Border Style="{StaticResource CardStyle}" Width="200" Height="120"
                        Background="#0078D7"
                        Margin="10"
                        Loaded="Card_Loaded">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Total Students" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="3" FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Card 2 -->
                <Border Style="{StaticResource CardStyle}" Width="200" Height="120"
                        Background="#28A745"
                        Margin="10"
                        Loaded="Card_Loaded">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Payments Today" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="500 EGP" FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Card 3 -->
                <Border Style="{StaticResource CardStyle}" Width="200" Height="120"
                        Background="#FFC107"
                        Margin="10"
                        Loaded="Card_Loaded">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Upcoming Sessions" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="2" FontSize="28" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
