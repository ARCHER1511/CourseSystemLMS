<Window x:Class="CourseSystemLMS.Views.AddGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Group"
        Height="380" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Add New Group"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0 0 0 15"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <!-- Group Name -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                <TextBlock Text="Group Name" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="GroupNameBox" Height="30"/>
            </StackPanel>

            <!-- Grade -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                <TextBlock Text="Grade" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="GradeBox" Height="30"/>
            </StackPanel>

            <!-- Monthly Price -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                <TextBlock Text="Monthly Price" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="MonthlyPriceBox" Height="30"/>
            </StackPanel>

            <!-- Description -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="DescriptionBox"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </StackPanel>

        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 15 0 0">
            <Button Content="Cancel"
                    Width="80"
                    Height="30"
                    Margin="0 0 10 0"
                    Background="#CCC"
                    Click="Cancel_Click"/>
            <Button Content="Add"
                    Width="80"
                    Height="30"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
