<Window x:Class="CourseSystemLMS.Views.PaymentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Details" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Student Payment Details" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock x:Name="StudentName" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
            <TextBlock x:Name="ParentContact" Margin="0 0 0 10"/>
            <TextBlock x:Name="Grade" Margin="0 0 0 10"/>
            <TextBlock x:Name="GroupName" Margin="0 0 0 10"/>
            <TextBlock x:Name="TotalAmount" Margin="0 0 0 10"/>
            <TextBlock x:Name="PaidAmount" Margin="0 0 0 10"/>
            <TextBlock x:Name="RemainingAmount" Margin="0 0 0 20" Foreground="#E91E63"/>

            <Button Content="Close" Width="80" HorizontalAlignment="Right" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
